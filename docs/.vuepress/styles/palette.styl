// 默认值
$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

.navbar 
    .site-name
        background-size auto 35px
        color #000
        padding-left 10px
        background-image -webkit-linear-gradient(left, #04c3bb, #fdbb2d 25%, #04c3bb 50%, #fdbb2d 75%, #04c3bb)
        -webkit-text-fill-color transparent
        -webkit-background-clip text
        -webkit-background-size 200% 100%
        -webkit-animation myGradientChange 4s infinite linear
        animation myGradientChange 4s infinite linear

@keyframes myGradientChange {
  0%{ background-position: 0 0;}
  100% { background-position: -100% 0;}
}

